---
import "../styles/global.css";
import SEO from "../components/SEO.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import DevThemeToggle from "../components/DevThemeToggle.astro";
import { SITE_DESCRIPTION } from "../consts";

export type Props = {
  title?: string;
  description?: string;
  noindex?: boolean;
};

const { title, description = SITE_DESCRIPTION, noindex = false } =
  Astro.props as Props;

const canonical = Astro.site ? new URL(Astro.url.pathname, Astro.site) : undefined;
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <script is:inline>
      (() => {
        // Default to light mode, unless a user has explicitly chosen otherwise.
        try {
          const stored = localStorage.getItem("theme");
          const theme = stored === "dark" ? "dark" : "light";
          document.documentElement.dataset.theme = theme;
        } catch {
          document.documentElement.dataset.theme = "light";
        }
      })();
    </script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <SEO title={title} description={description} canonical={canonical} noindex={noindex} />
  </head>
  <body class="min-h-full">
    <div class="pointer-events-none fixed inset-0 -z-10">
      <div
        class="absolute -top-24 left-1/2 h-[28rem] w-[28rem] -translate-x-1/2 rounded-full bg-brand/20 blur-3xl"
      />
      <div
        class="absolute -bottom-24 right-[-6rem] h-[26rem] w-[26rem] rounded-full bg-brand-2/15 blur-3xl"
      />
    </div>

    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <DevThemeToggle />
  </body>
</html>

