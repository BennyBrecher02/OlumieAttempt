---
export type Props = {
  title?: string;
  description?: string;
  href?: string;
  class?: string;
};

const { title, description, href, class: className = "" } = Astro.props as Props;

const Tag = href ? "a" : "div";
const tagProps = href
  ? { href, class: "no-underline block" }
  : { class: "" };
---

<Tag {...tagProps}>
  <div
    class={`surface h-full p-6 transition hover:-translate-y-0.5 hover:shadow-soft ${href ? "cursor-pointer" : ""} ${className}`}
  >
    {(title || description) && (
      <div class="mb-4 space-y-2">
        {title && <h3 class="text-base font-semibold tracking-tight">{title}</h3>}
        {description && <p class="text-sm leading-relaxed text-muted">{description}</p>}
      </div>
    )}
    <slot />
  </div>
</Tag>

